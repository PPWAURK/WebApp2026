generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int           @id @default(autoincrement())
  email         String        @unique
  passwordHash  String
  name          String?
  profilePhoto  String?       @map("profile_photo") @db.Text
  restaurantId  Int?
  restaurant    Restaurant?   @relation(fields: [restaurantId], references: [id], onDelete: SetNull)
  role          Role          @default(EMPLOYEE)
  isOnProbation Boolean       @default(false)
  workplaceRole WorkplaceRole @default(BOTH)
  trainingAccess Json?
  documents     Document[]
  purchaseOrders PurchaseOrder[] @relation("CreatedByUser")
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
}

model Restaurant {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  address   String
  users     User[]
  purchaseOrders PurchaseOrder[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Produit {
  id            BigInt   @id @default(autoincrement()) @db.UnsignedBigInt
  supplierId    Int      @map("supplier_id")
  reference     String?  @db.VarChar(100)
  categorie     String   @db.VarChar(20)
  nomCn         String   @map("nom_cn") @db.VarChar(255)
  designationFr String?  @map("designation_fr") @db.VarChar(255)
  unite         String?  @db.VarChar(100)
  prixUHt       Decimal? @map("prix_u_ht") @db.Decimal(10, 2)
  image         String?  @db.Text
  createdAt     DateTime @default(now()) @map("created_at") @db.Timestamp(0)
  updatedAt     DateTime @default(now()) @updatedAt @map("updated_at") @db.Timestamp(0)
  purchaseOrderItems PurchaseOrderItem[]

  @@map("produits")
}

model Fournisseur {
  id  Int    @id @default(autoincrement())
  nom String @db.VarChar(255)
  purchaseOrders PurchaseOrder[]

  @@map("fournisseurs")
}

model PurchaseOrder {
  id              Int                 @id @default(autoincrement())
  number          String              @unique @db.VarChar(50)
  supplierId      Int                 @map("supplier_id")
  supplier        Fournisseur         @relation(fields: [supplierId], references: [id], onDelete: Restrict)
  restaurantId    Int                 @map("restaurant_id")
  restaurant      Restaurant          @relation(fields: [restaurantId], references: [id], onDelete: Restrict)
  createdByUserId Int                 @map("created_by_user_id")
  createdByUser   User                @relation("CreatedByUser", fields: [createdByUserId], references: [id], onDelete: Restrict)
  deliveryDate    DateTime            @map("delivery_date") @db.Date
  deliveryAddress String              @map("delivery_address") @db.VarChar(255)
  totalItems      Int                 @map("total_items")
  totalAmount     Decimal             @map("total_amount") @db.Decimal(10, 2)
  bonFileName     String              @map("bon_file_name") @db.VarChar(191)
  items           PurchaseOrderItem[]
  createdAt       DateTime            @default(now()) @map("created_at") @db.Timestamp(0)

  @@index([restaurantId, createdAt])
  @@index([supplierId, createdAt])
  @@map("purchase_orders")
}

model PurchaseOrderItem {
  id             Int           @id @default(autoincrement())
  purchaseOrderId Int          @map("purchase_order_id")
  purchaseOrder   PurchaseOrder @relation(fields: [purchaseOrderId], references: [id], onDelete: Cascade)
  productId       BigInt       @map("product_id") @db.UnsignedBigInt
  product         Produit      @relation(fields: [productId], references: [id], onDelete: Restrict)
  supplierId      Int          @map("supplier_id")
  quantity        Int
  unitPriceHt     Decimal      @map("unit_price_ht") @db.Decimal(10, 2)
  lineTotal       Decimal      @map("line_total") @db.Decimal(10, 2)
  nameZh          String       @map("name_zh") @db.VarChar(255)
  nameFr          String?      @map("name_fr") @db.VarChar(255)
  unit            String?      @db.VarChar(100)
  category        String       @db.VarChar(20)

  @@index([purchaseOrderId])
  @@index([productId])
  @@map("purchase_order_items")
}

model Document {
  id               Int             @id @default(autoincrement())
  fileName         String          @unique
  category         UploadCategory
  originalName     String
  mimeType         String
  size             Int
  mediaType        UploadMediaType
  module           UploadModule
  section          UploadSection
  uploadedAt       DateTime        @default(now())
  uploadedByUserId Int?
  uploadedBy       User?           @relation(fields: [uploadedByUserId], references: [id], onDelete: SetNull)

  @@index([module, section, mediaType, uploadedAt])
}

enum Role {
  ADMIN
  MANAGER
  EMPLOYEE
}

enum WorkplaceRole {
  SALLE
  CUISINE
  BOTH
}

enum UploadCategory {
  images
  videos
  documents
}

enum UploadMediaType {
  image
  video
  document
}

enum UploadModule {
  TRAINING
  POLICY
  MANAGEMENT
  FORMS
}

enum UploadSection {
  RECIPE_TRAINING
  RECIPE
  MISE_EN_PLACE_SOP
  RED_RULES
  BLACK_RULES
  SALLE_TOOLS
  CUISINE_TOOLS
  MEAT_DATE_FORM
  CLEANING_FORM
}
